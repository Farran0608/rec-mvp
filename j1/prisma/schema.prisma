generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Trip {
  id         String   @id
  device_id  String
  start_at   DateTime?
  end_at     DateTime?
  payload    String   // JSON as string
  signature  String
  created_at DateTime @default(now())
}
